<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="l.generationz.first_program.Quests">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/a81"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/infa_about_quest"
            android:layout_width="350dp"
            android:layout_height="70dp"

            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/descr"
            android:layout_marginTop="37dp"
            android:background="@color/colorPrimary"
            android:text="TextView"
            android:textSize="14sp"
            tools:layout_editor_absoluteX="53dp"
            tools:layout_editor_absoluteY="208dp" />

        <TextView
            android:id="@+id/descr"
            android:layout_width="350dp"
            android:layout_height="300dp"
            android:layout_below="@+id/infa_about_quest"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="44dp"
            android:background="@color/colorPrimary"
            android:text="TextView" />

        <ImageButton
            android:id="@+id/map2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignEnd="@+id/descr"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="70dp"
            android:layout_marginEnd="18dp"
            app:srcCompat="@drawable/img_2" />

        <ImageButton
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_alignStart="@+id/descr"
            android:layout_alignTop="@+id/map2"
            android:layout_marginStart="48dp"
            app:srcCompat="@drawable/img_chek" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
